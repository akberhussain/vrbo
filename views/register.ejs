<div class = "container" style = "margin-top: 35px;">

    <div class= "row">
         <div style = "width: 45%; margin: 0 auto">
            <!-- <div class = "jumbotron jspecial"> -->
               <h1 class = "spH1" style = "font-size: 30px; color: #2c3e50;">SignUp As Host!!</h1>
             <form action = "/register" method = "post">
                 <div class = "form-group">
                    <input class = "form-control" type="email" name = "username" placeholder = "Email *" required>                 
                 </div>
                 <div class = "form-group">
                    <input class = "form-control" type="password" name = "password" pattern=".{6,}"  title="Six or more characters" placeholder = "Password *" required>                 
                 </div>
                 <div class = "form-group">
                    <input class = "form-control" type="text" name = "name" placeholder = "Your name *" required>
                 </div>
                 <div class = "form-group">
                    <input class = "form-control" type="text" name = "add" placeholder = "Enter Your Adress *" pattern=".{15,}"  title="Please match a valid Address pattern i.e Atleast 15 characters " required>                 
                 </div>                 
                 <div class = "form-group">
                    <input class = "btn btn-primary btn-block" type = "submit" value  = "Signup!!">                 
                </div>
             </form>    
            <!-- </div>      -->
         </div>
    </div>
</div>

