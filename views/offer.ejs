<% include ./partials/header %>

<div class ="row text-center">
    <h4><%= foundProperty.streetno %> <%= foundProperty.streetname %> <%= foundProperty.city %> <%= foundProperty.state %></h4>
    <h5>Please Add terms below to submit an Offer and reach the seller</h5>
</div>

<div class = "container" style = "margin-top: 35px;">

    <div class= "row">
         <div style = "width: 45%; margin: 0 auto">
            <!-- <div class = "jumbotron jspecial"> -->
               <!-- <h1 class = "spH1" style = "font-size: 30px; color: #2c3e50;">Upload Contract</h1> -->

        <form action="/uploadcontract/<%= foundProperty.id %>" method = "post" encType='multipart/form-data' onsubmit="return checkEscalation(this);">

            <div class="form-group">
                <input type="text" name="agentname" class="form-control" placeholder = "Agent's Name *" title="Agent's Name" required>
            </div>

            <div class="form-group">
                <input type="email" name="agentemail" class="form-control" placeholder = "Agent's Email *" title="Agent's Email" required>
            </div>

            <div class="form-group">
                <input type="text" name="agentcontact" class="form-control" placeholder = "Agent's Phone Number *" title="Agent's Phone Number" required>
            </div>            

            <div class="form-group">
                <input type="number" name="purchaseprice" class="form-control" placeholder = "Offer Price *" title="Offer Price" required>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="escalation1">Escalation To</label>
                  <input type="number" name ="escalation1" class="form-control" id="escalation1" placeholder="$">
                </div>
                <div class="form-group col-md-6">
                  <label for="escalation2">By</label>
                  <input type="number" name = "escalation2" class="form-control" id="escalation2" placeholder="$">
                </div>
            </div>
            
            <div class="form-group">
                <input type="number" name="appraisalgap" class="form-control" placeholder = "Appraisal Gap amount $" title="Appraisal Gap amount $">
            </div>

            <div class="form-group">
                <input type="number" name="escrowamount" class="form-control" placeholder = "Escrow amount $ *" title="Escrow amount $" required>
            </div>

            <div class="form-group">
                <input type="text" name="escrowfunds" class="form-control" placeholder = "Who's holding escrow funds *" title="Who's holding escrow funds" required>
            </div>

            <div class = "form-group">
                <div id="payment">
                  <select name = "payment" class="form-control" required>
                    <option name = "payment" value = "#">Select Payment Type</option>
                    <option value = "Cash">Cash</option>
                    <option value = "Conventional">Conventional</option>
                    <option value = "FHA">FHA</option>
                    <option value = "VA">VA</option>
                    <option value = "Other">Other</option>
                  </select>
                </div>
                <!-- <input type="text" name="loanorcash" class="form-control" placeholder="Loan Or Cash ? Please enter your choice"> -->
            </div>

            <div class="form-group">
                <input type="text" name="homewarranty" class="form-control" placeholder="Seller pays Home Warranty Yes or NO If Yes then: Enter amount *" title="Seller pays Home Warranty Yes or NO If Yes then: Enter amount" required>
            </div>

            <div class="form-group">
                <label for="inspection">Inspections to be completed by date: *</label>
                <input type="date" name="contingency" id="inspection" class="form-control" placeholder="Inspections to be completed by date:" title="Inspections to be completed by date:" required>
            </div>
            
            <div class="form-group">
                <input type="text" name="otherprovisions" class="form-control" placeholder="Enter Other Important offer considerations:" title="Enter Other Important offer considerations:">
            </div>                        
            
            <!-- <div class = "form-group">
                <div id="typeofloan">
                  <select name = "typeofloan" class="form-control">
                    <option name = "typeofloan" value = "N/a">Type Of Loan</option>
                    <option value = "Fha">Fha</option>
                    <option value = "Va">Va</option>
                    <option value = "Conventional">Conventional</option>
                    <option value = "Other">Other</option>
                  </select>
                </div>
                <input type="text" name="typeofloan" class="form-control" placeholder="Type Of Loan: I.e Va, Conventional or Other/ etc">
            </div> -->

            <div class="form-group">
                <!-- <label>Closing Date</label> -->
                <input type="text" name="closingdate" class="form-control" placeholder="Closing date / time frame *" title="Closing date / time frame" required>
            </div>

            <div class="form-group">
                <input type="text" name="expirationtime" class="form-control" placeholder="Offer response time deadline *" title="Offer response time deadline" required>
            </div>

            <h6><strong>Upload Contract in Pdf *</strong></h6>
                <input type="file" name="contract" class="btn btn-light form-control" required>
            <br>
            <h6><strong>Upload Seller disc in Pdf *</strong></h6>
                <input type="file" name="sellerdisc" class="btn btn-light form-control" required>
            <br>
            <h6><strong>Upload Lead based paint in Pdf</strong></h6>
                <input type="file" name="leadbasedpaint" class="btn btn-light form-control" >
            <br>
            <h6><strong>Upload preapproval letter in Pdf</strong></h6>
                <input type="file" name="preapprovalletter" class="btn btn-light form-control" >
            <br>
            <h6><strong>Upload Other Docs in Pdf</strong></h6>
                <input type="file" name="otherdocs" class="btn btn-light form-control" >
            <br>                        
            <div class="form-group text-center">
                <button type ="submit" class="btn btn-primary text-center form-control">Send Offer</button>
            </div>
        </form>
            <!-- </div>      -->
         </div>
    </div>
</div>
<script>

function checkEscalation(theForm) {
    if ((!theForm.escalation1.value.length && theForm.escalation2.value.length ) || (theForm.escalation1.value.length && !theForm.escalation2.value.length ))
    {
        alert('Enter both fields in Escalation or niether');
        return false;
    } else {
        return true;
    }
}

</script>
<% include ./partials/footer %>