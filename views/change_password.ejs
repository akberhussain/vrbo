<% include ./partials/header %>

<div class = "container" style = "margin-top: 35px;">
    <div class = "row">
         <div  style = "width: 45%; margin: 0 auto">
            <!-- <div class = "jumbotron jspecial"> -->
                <h1 class = "spH1" style = "font-size: 30px; color: #2c3e50;">Change Password</h1>    
                <form action = "/change_password?_method=put" method = "post">    
                     <div class = "form-group">
                        <input class = "form-control" type="email" name = "username" placeholder = "Your Email">
                     </div>
                     <div class = "form-group">
                        <input class = "form-control" type="password" name = "password" placeholder = "Old Password">
                     </div>
                     <div class = "form-group">
                        <input class = "form-control" type="password" name = "password1" placeholder = "New Password">
                     </div>
                     <div class = "form-group">
                        <input class = "form-control" type="password" name = "password2" placeholder = "Confirm New Password">
                     </div>                                          
                     <div class = "form-group">
                        <input class = "btn btn-primary btn-block" type = "submit" value  = "Update Password!!">
                     </div>
                     <div class = "form-group">
                        <a class = "btn btn-primary btn-block" href = "/login">Go to Login Page</a> 
                     </div>
                </form>
            <!-- </div>     -->
         </div>
    </div>
</div>

